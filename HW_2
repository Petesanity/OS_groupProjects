
public class Prime extends Thread{
private int number;
// this is the constructor that initialize all instance variable
public Prime(int number) {
	this.number= number;

}
// its return a boolean value that the number is prime or not
public boolean PrimeOrNot (int number) {
	for(int i=2; i<number; i++) {
		if(number%i==0)
			return false;
	}
	return true;
}
// this method print all the prime numbers less than the entered value

public void smallnumbers() {
	
	for(int i=2; i<= number; i++) {
		if(PrimeOrNot(i)) {
		System.out.println(i);}
		else {}
			
		
			
	}
}
}
import java.util.Scanner;
public class DriverClass {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("enter a number");
		//take the value from the keyboard
		Scanner scan= new Scanner(System.in);
		int x= scan.nextInt();
		Prime P= new Prime(x);
		P.start();
		P.smallnumbers();
		System.out.print(P);

	}

}
