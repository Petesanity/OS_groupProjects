#include <sys/types.h>
#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
int n;
int p=fork();    //Create child process
scanf("%d", &n); //user input for number n
while(n<=0){ 	 //error checking so a positive integer is passed
printf("Please enter a positive number");
scanf("%d", &n); //user input for number n
	}
if (p == 0) {      //If its a child process then do
while(n!=1) {
if (n%2==0) { 	//case for even
n = n/2;
}
else if (n%2 == 1) {
n = (3*n) + 1;  //case for odd
}
printf("%d", p);
		}
	}
else if(p > 0) {     //If its a parent then do
printf("Parent executes and will wait for child to process. Child process data is: ");
wait();
}
return 0;
}
